<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#F8F5F5"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Hàng 1: Thời gian còn lại -->
    <TextView
        android:id="@+id/text_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Còn lại: 2 ngày"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <!-- Hàng 2: Start - End -->
    <TextView
        android:id="@+id/text_time_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00 08/05/2025 - 23:59 10/05/2025" />

    <!-- Hàng 3: Tên task -->
    <TextView
        android:id="@+id/text_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên task"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Hàng 4: Manager và Member -->
    <TextView
        android:id="@+id/text_manager_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý: A - Người phụ trách: B" />

    <!-- Hàng 5: 3 Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_change_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Edit" />

        <Button
            android:id="@+id/btn_extend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Extend" />
    </LinearLayout>

</LinearLayout>
